{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@/test-utils": [
        "config/jest/test-utils"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@optional-package-scope/bar/*": ["../../packages/bar/src/*"],
      "@optional-package-scope/bar": ["../../packages/bar/src/index"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "out",
    "docs",
    "public",
    "coverage"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.json"
  ]
}