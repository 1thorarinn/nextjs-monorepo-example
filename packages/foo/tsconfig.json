{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "jsx": "react",
    "noEmit": false,
    "rootDir": "src",
    "outDir": "build",
    "composite": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}