{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "jsx": "react-jsx",
    "noEmit": false,
    "rootDir": "src",
    "outDir": "build",
    "composite": false,
    "incremental": true
  },
  "exclude": ["node_modules", "dist", "build"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "typings/*.d.ts"]
}
